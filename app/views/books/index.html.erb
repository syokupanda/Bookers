<div class="flash">
  <%= flash[:destroy] %>
</div>

<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  <% @books.each do |book| %>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      <%= link_to "Show", "/books/#{book.id}" %>
      <%= link_to "Edit", "/books/#{book.id}/edit" %>
      <%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure？" %>
    </td>
  </tr>
  <% end %>

</table>

<!-- 新規投稿フォーム -->
<div class="new-text">
  <h2>New book</h2>
  <%= form_with model:@book, url:'/books', local:true do |f| %>
   <% if @book.errors.any? %>
     <h3><%= @book.errors.count %> errors prohibited this book from being saved</h3>
      <ul>
        <% @book.errors.full_messages.each do |mess| %>
        <li><%= mess %></li>
        <% end %>
      </ul>
    <% end %>

     <p>Title</p>
     <%= f.text_field :title %>
     <p>Body</p>
     <%= f.text_area :body %><br>
     <%= f.submit 'Create Book' %>
  <% end %>
</div>