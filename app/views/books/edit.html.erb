<h1>Editing Book</h1>

<div class="edit-box">
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

  <% if @book.errors.any? %>
     <h3><%= @book.errors.count %> errors prohibited this book from being saved</h3>
      <ul>
        <% @book.errors.full_messages.each do |messa| %>
        <li><%= messa %></li>
        <% end %>
      </ul>
   <% end %>

  <p class="edit-text">Title</p>
  <%= f.text_field :title %>
  <p class="edit-text">Body</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'Show', "/books/#{@book.id}" %>|<%= link_to 'Back', '/books' %>
</div>